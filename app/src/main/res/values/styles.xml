<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ParentBackground">
        <item name="android:background">@color/colorFontFrame</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TextLoading">
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:textColor">@color/colorSurface</item>
        <item name="android:text">@string/text_loading</item>
    </style>

    <style name="textDescription">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">20sp</item>
        <item name="android:layout_marginEnd">20sp</item>
        <item name="android:textColor">@color/colorFontFrame</item>
        <item name="android:textSize">@dimen/item_id</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="textTitleDevice">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">18sp</item>
        <item name="android:layout_marginEnd">20sp</item>
        <item name="android:textColor">@color/colorFontFrame</item>
        <item name="android:textSize">@dimen/item_title</item>
    </style>


    <style name="textLegal">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">20sp</item>
        <item name="android:layout_marginEnd">20sp</item>
        <item name="android:textColor">@color/colorFontFrame</item>
        <item name="android:textSize">@dimen/item_legal</item>
    </style>



</resources>